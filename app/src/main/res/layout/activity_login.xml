<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pencils"
    tools:context=".Login">

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Đăng Nhập"
        android:textColor="#2196F3"
        android:textSize="40sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_login"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/txt_tk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản "
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tk"
            android:backgroundTint="@color/white"
            android:hint="nhập tên đăng nhập"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_username"
            android:layout_marginTop="10dp"
            android:text="Mật Khẩu "
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/edt_mk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_pass"
            android:backgroundTint="@color/white"
            android:hint="nhập mật khẩu"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_mk"
            android:text="Nhớ mật khẩu"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_mk"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="#2196F3"
            android:text="Đăng Nhập"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/quen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:text="quên mật khẩu"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/dki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quen"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="Chưa có tài khoản ?"
            android:textColor="#F4D925"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>